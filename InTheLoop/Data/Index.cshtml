@page
@model InTheLoop.Data.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.List[0].ListCreatorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].ListTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.List[0].EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.List) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ListCreatorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ListId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ListId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
